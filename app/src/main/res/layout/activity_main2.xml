<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="alex.estudio.com.com.appnoticias.Main2Activity"
    android:background="#d6bec4eb">

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Audi"
        android:id="@+id/noticia1"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="#928dff" />

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="BENTLEY"
        android:id="@+id/noticia2"
        android:layout_marginTop="30dp"
        android:background="#928dff"
        android:layout_below="@+id/noticia1"
        android:layout_alignRight="@+id/noticia1"
        android:layout_alignEnd="@+id/noticia1" />

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="LEXUS"
        android:id="@+id/noticia3"
        android:layout_marginTop="30dp"
        android:background="#928dff"
        android:layout_below="@+id/noticia2"
        android:layout_alignRight="@+id/noticia2"
        android:layout_alignEnd="@+id/noticia2" />

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="PORSCHE"
        android:id="@+id/noticia4"
        android:layout_marginTop="30dp"
        android:background="#928dff"
        android:layout_below="@+id/noticia3"
        android:layout_alignRight="@+id/noticia3"
        android:layout_alignEnd="@+id/noticia3" />

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="JAGUAR"
        android:id="@+id/noticia5"
        android:layout_marginTop="32dp"
        android:background="#928dff"
        android:layout_below="@+id/noticia4"
        android:layout_alignRight="@+id/noticia4"
        android:layout_alignEnd="@+id/noticia4" />

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="AUDI TT"
        android:id="@+id/noticia6"
        android:background="#928dff"
        android:layout_below="@+id/noticia5"
        android:layout_alignRight="@+id/noticia5"
        android:layout_alignEnd="@+id/noticia5"
        android:layout_marginTop="30dp" />

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/volver"
        android:background="@drawable/back"
        android:layout_alignBottom="@+id/noticia1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="20dp" />

</RelativeLayout>
